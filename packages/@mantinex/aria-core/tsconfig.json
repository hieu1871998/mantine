{
  "include": ["./src", "../../@types"],
  "compilerOptions": {
    "rootDir": "src",
    "declaration": true,
    "types": ["node"],
    "target": "ES2015",
    "lib": ["DOM", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "composite": true
  }
}
